<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="WARN">
    <Appenders>
        <File name="Druid" fileName="<%= "#{@log_dir}/#{@service_name}.log" %>">
            <PatternLayout pattern="%d{ISO8601} %p [%t] %c - %m%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Druid"/>
        </Root>
    </Loggers>
</Configuration>